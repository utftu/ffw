{
  "include": ["packages/**/*"],
  "compilerOptions": {
    "isolatedModules": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "lib": ["es2021"],
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "utils": ["./packages/utils"]
    }
  }
}
