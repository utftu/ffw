{
  "include": ["packages/**/*"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "utils": ["./packages/utils"]
    }
  }
}
